<xs:schema xmlns="http://www.epcregister.com/xsd/rdsap" xmlns:xs="http://www.w3.org/2001/XMLSchema"
	targetNamespace="http://www.epcregister.com/xsd/rdsap" elementFormDefault="qualified"
	version="LIG-19.0">
